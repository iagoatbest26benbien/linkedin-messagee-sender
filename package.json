{
  "name": "linkedin-message-sender",
  "version": "1.0.0",
  "description": "Application Electron pour envoyer des messages LinkedIn via n8n",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run start\" \"cd src/renderer && npm start\"",
    "build": "cd src/renderer && npm run build && cd ../.. && electron-builder"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "electron-store": "^8.1.0",
    "express": "^4.18.2",
    "puppeteer": "^21.5.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.linkedin.message.sender",
    "productName": "LinkedIn Message Sender",
    "files": [
      "**/*",
      "!src/renderer/node_modules/**/*",
      "!src/renderer/build/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    }
  }
}
